<resources>
    <style name="TitleTextView" >
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/TextSize_15sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!-- Launcher activity theme.  to remove white bg -->
    <style name="LauncherTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@mipmap/ic_launcher</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>